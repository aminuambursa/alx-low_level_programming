#!/bin/bash

# Check if the CFILE variable is set
if [ -z "$CFILE" ]; then
    echo "CFILE variable is not set. Please set it to the name of your C file."
    exit 1
fi

# Check if the C file exists
if [ ! -f "$CFILE" ]; then
    echo "C file '$CFILE' not found."
    exit 1
fi

# Create the output file name by replacing .c with .s
OUTPUT_FILE="${CFILE%.c}.s"

# Generate the assembly code using gcc
gcc -S -masm=intel "$CFILE" -o "$OUTPUT_FILE"

# Check if the compilation was successful
if [ $? -eq 0 ]; then
    echo "Assembly code generated successfully. Output file: $OUTPUT_FILE"
else
    echo "Failed to generate assembly code."
fi
export CFILE=main.c
./100-intel
